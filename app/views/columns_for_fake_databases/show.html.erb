<style>
.card{
    border-radius: 4px;
    background: #fff;
    box-shadow: 0 6px 10px rgba(0,0,0,.08), 0 0 6px rgba(0,0,0,.05);
    transition: .3s transform cubic-bezier(.155,1.105,.295,1.12),.3s box-shadow,.3s -webkit-transform cubic-bezier(.155,1.105,.295,1.12);
    cursor: pointer;
}
.card:hover{
  transform: scale(1.05);
  box-shadow: 0 10px 20px rgba(0,0,0,.12), 0 4px 8px rgba(0,0,0,.06);
}
</style>

<div class="container">
<div class="d-flex flex-column">
  <div class="col-xl-12 col-lg-8 col-md-10 col-sm-11 post-card">
    <!--Post Form-->
    <div class="card-header">
      <b>Select colmuns for your module:</b>
    </div>
    <!-- Element to be copied -->
    <div class="card" id="newlink">
      <div class="card-body">

      <%= form_for(@column, as: @column, url: columns_for_fake_database_path(@column), html: { method: :put }) do |f| %>

          <div id="alert_message">
          </div>
          
          <div class="form-group row mt-2">
            <div class="col pl-0">
              <%= f.text_field :name, class: "form-control border-0", autocomplete:"off", required: "true", placeholder: "Name of the field" %>
            </div>
          </div>

          <div class="form-group row mt-2">
            <div class="col pl-0">
              <%= f.text_field :column_type, class: "form-control border-0", required: "true", placeholder: "Field Data Type" %>
            </div>
          </div>

          <div class="form-group row mt-2">
            <div class="col pl-0">
              <%= f.text_field :tag, class: "form-control border-0", required: "true", placeholder: "Select Tag"%>
            </div>
          </div>
      
          <div class="form-group row mt-2">
            <%= f.submit "Update this column", class: "btn btn-success form-control border-0" %>
          </div>

        <% end %>
      </div>
      <%= link_to "Update Another", columns_for_fake_databases_path %>
    </div>
  </div>
 </div>
</div>

