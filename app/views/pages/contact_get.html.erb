<div class="container contact-form">
<%= form_for(@contact_table, as: @contact_table, url: contact_tables_path(@contact_table), html: { method: :post }) do |f| %>
    <h3>Drop us a message</h3>
               <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                        <%= f.text_field :name, autofocus: true, placeholder: "Name", class: "form-control", required: true%>
                        </div>
                        <div class="form-group">
                        <%= f.text_field :phonenumber, autofocus: true, placeholder: "Phone Number", class: "form-control", required: true%>
                        </div>
                        <div class="form-group">
                        <%= f.text_field :number, autofocus: true, placeholder: "Email", class: "form-control", required: true%>
                        </div>
                        <div class="form-group">
                        <%= f.submit "Submit", class: "btn btn-success form-control border-0" %>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                        <%= f.text_area :message, autofocus: true, placeholder: "Your message", class: "form-control", required: true%>
                        </div>
                    </div>
                </div>
<% end %>
<% if @contact_table.errors.any? %>
 <script type="text/javascipt">
    <% @contact_table.errors.full_messages.each do |value| %>
        toastr.error('<%= value %>')
    <% end %>
 </script>
<% end %>
</div>