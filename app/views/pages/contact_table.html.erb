<div class="container contact-form">
<%= form_for(@contact_table, as: @contact_table, url: contact_tables_path(@contact_table), html: { method: :post }) do |f| %>
    <h3>Drop us a Message</h3>
               <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                        <%= f.text_area :name, class: "form-control"%>
                        </div>
                        <div class="form-group">
                        <%= f.text_area :phonenumber, class: "form-control"%>
                        </div>
                        <div class="form-group">
                        <%= f.text_area :number, class: "form-control"%>
                        </div>
                        <div class="form-group">
                        <%= f.submit "Submit", class: "btn btn-success form-control border-0" %>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                        <%= f.text_area :message, class: "form-control"%>
                        </div>
                    </div>
                </div>
<% end %>
            </div>