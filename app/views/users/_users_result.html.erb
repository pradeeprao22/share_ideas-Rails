<% if posts.present? %>
  <% posts.each do |post| %>
      <%= link_to post_path(post), class: "no-text-decoration normal-color" do %>
         <div class="search-result-item"><%= post.content %></div>
      <% end %>
  <% end %>
<% else %>
  <div class="p-3">
    No results found.
  </div>
<% end %>