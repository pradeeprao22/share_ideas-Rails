<br>
<div class="container">
<h2>Inbox</h2>
<div class="form-login box">
<h4>Conversations</h4>
        <% @conversations.each do |conversation| %>
        <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
        <% if conversation.sender_id == current_user.id %>
        <% recipient = User.find(conversation.recipient_id) %>
        <% else %>
        <% recipient = User.find(conversation.sender_id) %>
        <% end %>
        <h3><%= link_to recipient.email, conversation_messages_path(conversation)%></h3>
        <% end %>
        <% end %>
</div> 
<div class="form-login box">   
        <h4>You Follow This Coders</h4>
        <% @follows.each do |follow| %>
        <% if follow.following.id != current_user.id %>
        <h3><%= link_to follow.following.email, conversations_path(sender_id: current_user.id, recipient_id: follow.following.id), method: "post"%></h3>
        <% end %>
        <% end %>
</div>
</div>